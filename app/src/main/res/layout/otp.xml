<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="55dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/otp_msg"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/otp_status"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_otp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/light_white"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:layout_marginRight="10dp"
                            android:padding="10dp" />
                        <EditText
                            android:id="@+id/et_otp1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/light_white"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:layout_marginRight="10dp"
                            android:padding="10dp" />
                        <EditText
                            android:id="@+id/et_otp2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/light_white"
                            android:gravity="center"
                            android:inputType="number"
                            android:layout_marginRight="10dp"
                            android:maxLength="1"
                            android:padding="10dp" />
                        <EditText
                            android:id="@+id/et_otp3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/light_white"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_dont_rec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="right"
                            android:text=" Didn't receive the OTP?"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_resend"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="right"
                            android:text="  RESEND OTP "
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_on_click"
                        android:padding="10dp"
                        android:text="Approve"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBtnText" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <cms.co.in.kat.customview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/otp_icon" />
    </RelativeLayout>
</LinearLayout>