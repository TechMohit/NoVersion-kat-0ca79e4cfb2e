<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/blue_light"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:transitionName="logo"
        android:src="@drawable/app_logoo" />
    <TextView
        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:text="KAT "/>
</LinearLayout>

    <TextView
        android:id="@+id/txt_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Select"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_citizen"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_on_click"
        android:text="Citizen"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/colorBtnText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_advocate"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_on_click"
        android:text="Advocate"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/colorBtnText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_ca_or_stp"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_on_click"
        android:text="CA/STP"
        android:gravity="center"
        android:transitionName="usertype"
        android:textSize="17sp"
        android:textColor="@color/colorBtnText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_companies"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_on_click"
        android:text="Companies"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/colorBtnText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_societies"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_on_click"
        android:text="Societies"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/colorBtnText"
        android:textStyle="bold" />

</LinearLayout>