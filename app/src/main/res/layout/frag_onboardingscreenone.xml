<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/whole"
    android:background="#2196f3">


    <ImageView
        android:id="@+id/onbording_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/onbordingpageone"
         />

    <TextView
        android:id="@+id/textSplashHeader"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/onBoardingOne_txtHeader_dim"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Welcome To\n Karnataka Appellate Tribunal"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textSplashDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="This Case Watch Mobile App will help you to track the case status filed in Karnataka Appellate Tribunal.You can also view the  daily cause list and much more.\nExplore now"
        android:textSize="15sp"
        android:padding="5dp"
        android:gravity="left"
        android:layout_below="@+id/onbording_img"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/onBoardingOne_txtDetails_dim"
       />

</RelativeLayout>