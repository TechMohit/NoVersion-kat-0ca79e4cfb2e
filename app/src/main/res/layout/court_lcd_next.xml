<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="1sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="COURT HALL"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/court_lcd_text"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1sp"
                android:layout_marginRight="1sp"
                android:layout_marginTop="1sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1sp"
                    android:layout_weight="1"
                    android:background="@color/blue_light"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="CASE NUMBER"
                    android:textAllCaps="true"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/court_lcd_text" />

                <TextView
                    android:id="@+id/txt_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue_light"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="NEXT HEARING DATE"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/court_lcd_text" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linr1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/child1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1sp"
                    android:layout_marginRight="1sp"
                    android:visibility="gone"
                    android:layout_marginTop="1sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_child1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:background="@color/silver"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/court_lcd_text" />

                    <TextView
                        android:id="@+id/txt1_child1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/court_lcd_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/child2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1sp"
                    android:layout_marginRight="1sp"
                    android:visibility="gone"
                    android:layout_marginTop="1sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_child2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:background="@color/silver"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/court_lcd_text" />

                    <TextView
                        android:id="@+id/txt1_child2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/court_lcd_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/child3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_child3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:background="@color/silver"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/court_lcd_text" />

                    <TextView
                        android:id="@+id/txt1_child3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/court_lcd_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/child4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1sp"
                    android:layout_marginRight="1sp"
                    android:visibility="gone"
                    android:layout_marginTop="1sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_child4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:background="@color/silver"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/court_lcd_text" />

                    <TextView
                        android:id="@+id/txt1_child4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/court_lcd_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/child5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1sp"
                    android:visibility="gone"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_child5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1sp"
                        android:layout_weight="1"
                        android:background="@color/silver"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/court_lcd_text" />

                    <TextView
                        android:id="@+id/txt1_child5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/court_lcd_text" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
