<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linerl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/dot"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/timelineboxleft"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:paddingBottom="2dp"
                android:paddingTop="10dp"
                android:layout_marginRight="6dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:gravity="center|top"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:layout_marginRight="6dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/timelinedot"></ImageView>


        <LinearLayout
            android:id="@+id/linerr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/dot"
            android:background="@drawable/timelineboxright"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|bottom"
                android:paddingBottom="2dp"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:gravity="center|top"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>